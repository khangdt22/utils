{
    "name": "@khangdt22/utils",
    "version": "0.0.6",
    "description": "A collection of utility functions for JavaScript / TypeScript applications",
    "license": "MIT",
    "author": "Diep Dang <khangdt310722@gmail.com>",
    "homepage": "https://github.com/khangdt22/utils",
    "repository": "github:khangdt22/utils",
    "bugs": {
        "email": "khangdt310722@gmail.com",
        "url": "https://github.com/khangdt22/utils/issues"
    },
    "type": "module",
    "sideEffects": false,
    "files": [
        "dist",
        "src"
    ],
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "default": "./dist/*.js",
            "types": "./dist/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/*"
            ]
        }
    },
    "packageManager": "pnpm@8.7.0",
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsc",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "pnpm prettier '**/*.!(js|ts)' && pnpm eslint .",
        "eslint": "eslint --ignore-path .gitignore --fix",
        "prettier": "prettier --ignore-path .gitignore --ignore-unknown --write",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "deepmerge": "^4.3.1",
        "flat": "github:hughsk/flat#master",
        "json5": "^2.2.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "latest",
        "@khangdt22/eslint-config": "latest",
        "@khangdt22/prettier-config": "latest",
        "@types/node": "^20.5.7",
        "eslint": "^8.48.0",
        "lint-staged": "^14.0.1",
        "np": "^8.0.4",
        "npm-check-updates": "^16.13.2",
        "only-allow": "^1.1.1",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "simple-git-hooks": "^2.9.0",
        "typescript": "^5.2.2",
        "zod": "^3.22.2"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "eslintConfig": {
        "extends": "@khangdt22"
    },
    "lint-staged": {
        "*.{js,ts}": "pnpm eslint",
        "*.!(js|ts)": "pnpm prettier"
    },
    "prettier": "@khangdt22/prettier-config",
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx tsc --noEmit && npx lint-staged"
    }
}
