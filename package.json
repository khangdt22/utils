{
    "name": "@khangdt22/utils",
    "version": "0.0.16",
    "description": "A collection of utility functions for JavaScript / TypeScript applications",
    "license": "MIT",
    "author": "Diep Dang <khangdt310722@gmail.com>",
    "homepage": "https://github.com/khangdt22/utils",
    "repository": "github:khangdt22/utils",
    "bugs": {
        "email": "khangdt310722@gmail.com",
        "url": "https://github.com/khangdt22/utils/issues"
    },
    "type": "module",
    "sideEffects": false,
    "files": [
        "dist",
        "src"
    ],
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./*": {
            "default": "./dist/*.js",
            "types": "./dist/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/*"
            ]
        }
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsc",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "pnpm prettier '**/*.!(js|ts)' && pnpm eslint .",
        "eslint": "eslint --ignore-path .gitignore --fix",
        "prettier": "prettier --ignore-path .gitignore --ignore-unknown --write",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@types/ws": "^8.5.10",
        "deepmerge": "^4.3.1",
        "flat": "github:hughsk/flat#master",
        "json5": "^2.2.3",
        "p-retry": "^6.1.0",
        "ws": "^8.15.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "latest",
        "@khangdt22/eslint-config": "latest",
        "@khangdt22/prettier-config": "latest",
        "@types/node": "^20.10.4",
        "eslint": "^8.55.0",
        "lint-staged": "^15.2.0",
        "np": "^9.2.0",
        "npm-check-updates": "^16.14.11",
        "only-allow": "^1.2.1",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "simple-git-hooks": "^2.9.0",
        "typescript": "^5.3.3",
        "zod": "^3.22.4"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "eslintConfig": {
        "extends": "@khangdt22"
    },
    "lint-staged": {
        "*.{js,ts}": "pnpm eslint",
        "*.!(js|ts)": "pnpm prettier"
    },
    "prettier": "@khangdt22/prettier-config",
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx tsc --noEmit && npx lint-staged"
    }
}
